<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        app:srcCompat="@drawable/profile_image"
        android:contentDescription="@string/profile_foto_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/text_label_nama" />

        <TextView
            android:id="@+id/textNama"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/text_nama" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelNim"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/text_label_nim" />

        <TextView
            android:id="@+id/textNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_nim" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelJurusan"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/text_label_jurusan" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_jurusan" />
    </LinearLayout>

</LinearLayout>